<mvc:View controllerName="sapmarco.projectpages.controller.UI5Con" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" core:require="{ sapMLib: 'sap/m/library' }">
	<Page id="ui5ConPage" showNavButton="true" navButtonPress=".onNavBack" title="UI5Con 2022" titleAlignment="Center" navButtonTooltip="{i18n>navButtonBackTooltip}">
		<headerContent>
			<Button icon="sap-icon://chain-link" iconFirst="false" tooltip="{i18n>UI5Con22LinkTooltip}" text="{i18n>UI5Con22Link}" press="sapMLib.URLHelper.redirect('https://openui5.org/ui5con/germany2022/', true)" />
		</headerContent>
		<content>
			<HBox justifyContent="Center">
				<VBox class="sapUiLargeMarginTopBottom" alignItems="Center">
					<Text text="{i18n>ui5conintroduction}" textAlign="Center"></Text>
					<Link href="https://youtu.be/KOsQt-arDzs" target="_blank" text="{i18n>ui5ConLinkToVideoText}"></Link>
				</VBox>
			</HBox>
			<FlexBox fitContainer="true" justifyContent="Center" renderType="Bare" width="100%" wrap="Wrap">
				<Image class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" src="resources/img/ui5con22/DSC7836.jpg" width="45%" />
				<Image class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" src="resources/img/ui5con22/DSC7837.jpg" width="45%" />
				<Image class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" src="resources/img/ui5con22/DSC7840.jpg" width="45%" />
				<Image class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" src="resources/img/ui5con22/DSC7844.jpg" width="45%" />
				<Image class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" src="resources/img/ui5con22/DSC7839.jpg" width="45%" />
				<Image class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" src="resources/img/ui5con22/DSC7857.jpg" width="45%" />
				<Image class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" src="resources/img/ui5con22/DSC03115.jpg" width="45%" />
				<Image class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" src="resources/img/ui5con22/DSC03117.jpg" width="45%" />
				<Image class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" src="resources/img/ui5con22/DSC03120.jpg" width="45%" />
				<Image class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" src="resources/img/ui5con22/DSC03121.jpg" width="45%" />
				<Image class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" src="resources/img/ui5con22/DSC03130.jpg" width="45%" />
			</FlexBox>
		</content>
		<footer>
			<Toolbar id="footerToolbar" design="Solid">
				<core:Icon src="sap-icon://lightbulb" class="size2" press=".toggleTheme" alt="Toggle Theme" tooltip="{i18n>themeToggleTooltip}" />
				<ToolbarSpacer />
				<Text class="footerText" text="{i18n>footerText}">
					<layoutData>
						<ToolbarLayoutData shrinkable="true" />
					</layoutData>
				</Text>
				<ToolbarSpacer />
				<Button icon="sap-icon://action" iconFirst="false" tooltip="{i18n>conTooltip}" text="{i18n>UI5Con}" press="sapMLib.URLHelper.redirect('https://openui5.org/ui5con/', true)" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>